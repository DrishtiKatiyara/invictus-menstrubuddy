    <link href="/css/contact.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/7254a5900b.js" crossorigin="anonymous"></script>
    <title>MenstruBuddy</title>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/" style="font-size: xx-large; font-family: 'Ubuntu', sans-serif;  font-style: italic;"><img style="height: 100px !important ;width: 200px !important;"src="/images/logo.jpg" alt=""></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto" style="
              font-size: large;
              font-family: 'Ubuntu', sans-serif;
              font-style: bold;
            ">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/drives">Upcoming Drives</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/contact">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <% if(message.length != 0){ %>
        <div class="success">
            <h6><%=message %></h6>
        </div>
    <%}%>
<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4" style="text-align: center;
    font-family: 'Ubuntu', sans-serif;
    font-style: bold;
    color: #ee3e5d;
    font-size: 50px;">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5" style="text-align: center;
    font-family: 'Ubuntu', sans-serif; font-size: large; color: #ee3e5d;
    ">Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.</p>



    <div class="row" style="padding-left: 10%;">

        <!--Grid column-->
        <div class="col-md-6 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="/contact" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control">
                            <label for="name" class="">Your name</label>
                            <br>
                            <br>
                            <br>
                        </div>
                    </div>
                    <!--Grid column-->

                    

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control">
                            <label for="email" class="">Your email</label>
                            <br>
                            <br>
                            <br>
                        </div>
                    </div>
                    <!--Grid column-->

                    <br>

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control">
                            <label for="subject" class="">Subject</label>
                            <br>
                            <br>
                            <br>
                        </div>
                    </div>
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea class="form-control" aria-label="With textarea" name ="feedback"></textarea>
                            <label for="message">Your message</label>
                            <br>
                            <br>
                            <br>
                        </div>

                    </div>
                </div>
                <!--Grid row-->
                <div class="text-center text-md-left">
                    <button type="submit" class="btn contact btn-lg" style="color: white;">Share</button>
                </div>
            </form>

            
            <div class="status"></div>
            <br>
                            <br>
                            <br>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-3">
            <img src="/images/Contact us.png" style="width: 500px; margin-top: -25%;">
        </div>
        <!--Grid column-->

    </div>

</section>
  <!-- Footer -->

  <div class="footer">
    <div>
      <h1 class="connect">Happy to Connect</h1>
      <div class="row icons">
        <div class="col-lg-3">
          <i class="fa-solid fa-envelope fa-3x"></i>
        </div>
        <div class="col-lg-3">
          <i class="fa-brands fa-instagram fa-3x"></i>
        </div>
        <div class="col-lg-3">
          <i class="fa-brands fa-facebook-f fa-3x"></i>
        </div>
        <div class="col-lg-3">
          <i class="fa-brands fa-whatsapp fa-3x"></i>
        </div>
      </div>
    </div>
  </div>
<!--Section: Contact v.2-->
<script src="contact_us.js"></script>
</body>