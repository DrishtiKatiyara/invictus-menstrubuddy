<div class="but">
<button type="button" class="btn btn-lg writeblog-button" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Write Your Own Blog 
</button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Share Your Views here</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/addBlog" method="post">
                <div class="mb-3">
                    <span class="input-group-text">Name</span>
                  <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name ="Name">
                </div>
                <div class="mb-3">
                    <span class="input-group-text">Your Views</span>
                    <textarea class="form-control" aria-label="With textarea" name ="Blog"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn" style="background-color: #ee3e5d; color: white;">Share</button>
                  </div>
              </form>
        </div>
        
      </div>
    </div>
  </div>

</div>
    <% print.forEach(function(user){ 
        if(user.id % 2 != 0){  %>
            <div class="right">
                <div class="row">
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <h1 class="name">
                            <%= user.Name %>
                        </h1>
                    </div>
                    <div class="col-lg-8">
                            <p>
                                <%= user.Blog %>
                            </p>
                    </div>
                </div>
                <hr/>
            </div>
       <%}
       else{ %>
            <div class="left">
                <div class="row">
                    <div class="col-lg-8">
                        <p>
                            <%= user.Blog %>
                        </p>
                    </div>
                    <div class="col-lg-4">
                        <h1 class="name">
                            <%= user.Name %>
                        </h1>
                    </div>
                </div>
                <hr/>
            </div>
      <% } %>
       
        
        
        
    <% }) %>

